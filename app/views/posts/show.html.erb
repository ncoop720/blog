<h1><%= @post.title %></h1>
<p>Author: <%= @post.author %></p>
<br>
<p><%= @post.body %></p>
<hr>

<h3>Comments</h3>

<%= form_for [@post, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @post.comments) %>
</ul>