<h1>Home Page</h1>
<br>


<div class="row">
	<div class="col-md-3 col-sm-2"></div>
	<div class="col-md-6 col-sm-8">
		<div id="featured-post">
			<a href=<%= show_post_path(id: @featured_post.id) %>>
				<p class="text-center"><%= @featured_post.title %></p>
			</a>
			<p class="text-center"><%= @featured_post.author %></p>
			<p><%= @featured_post.body.html_safe %></p>
		</div>
	</div>
	<div class="col-md-3 col-sm-2"></div>
</div>
<br>

<div id="my-posts" class="row">
	<%= render @posts, edit: false %>
</div>

<div id="infinite-scrolling">
  <%= will_paginate %>
</div>